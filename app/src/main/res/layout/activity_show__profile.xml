<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Show_Profile"
    android:background="#F73D80BB">

    <ImageView
        android:id="@+id/Image_Profil_back"
        android:layout_width="410dp"
        android:layout_height="212dp"
        android:background="#00FF8585"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo_profile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="250dp"
        android:src="@drawable/b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:text="ahmedelcommando"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toEndOf="@id/photo_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="معلومات الاتصال"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/Image_Profil_back"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/elatsal"
        android:textColor="#F7440ACC"/>

    <TextView
        android:id="@+id/Email_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="ahmedelarby35@gmail.com"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toEndOf="@id/Email_desing"
        app:layout_constraintTop_toBottomOf="@id/elatsal" />

    <TextView
        android:layout_marginStart="5dp"
        android:textSize="20sp"
        android:id="@+id/Email_desing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Email"
        app:layout_constraintEnd_toStartOf="@id/Email_profil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/elatsal" />
    <TextView
        app:layout_constraintEnd_toStartOf="@id/gender_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gender "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Email_desing"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:id="@+id/gender_desind"/>
    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mele"
        app:layout_constraintStart_toEndOf="@id/gender_desind"
        app:layout_constraintTop_toBottomOf="@id/Email_profil"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="220dp"
        android:id="@+id/gender_profil"/>

    <TextView
        android:id="@+id/phone_desing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:text="type open"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/name_profil"
        app:layout_constraintHorizontal_bias="0.303"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gender_desind" />

    <TextView
        android:id="@+id/namber_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        android:text="01001805905"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/phone_desing"
        app:layout_constraintTop_toBottomOf="@id/gender_profil" />

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="المعلومات الاساسيه "
        android:textColor="#FA5408E4"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/namber_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/malomat2"/>






</androidx.constraintlayout.widget.ConstraintLayout>